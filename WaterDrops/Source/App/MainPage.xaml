<Page
    x:Class="WaterDrops.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WaterDrops"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Settings button  -->
        <Button
            x:Name="SettingsButton"
            Grid.Row="0"
            Width="{Binding ElementName=SettingsButton, Path=Height}"
            Height="48"
            Margin="0,8,16,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="{Binding ElementName=ApplicationPage, Path=Background}"
            Click="SettingsButton_Click">
            <Viewbox MaxWidth="200" MaxHeight="200">
                <SymbolIcon Symbol="Setting" />
            </Viewbox>
        </Button>

        <!--  BMI Calculator button  -->
        <Button
            x:Name="BMICalculatorButton"
            Grid.Row="0"
            Width="{Binding ElementName=BMICalculatorButton, Path=Height}"
            Height="48"
            Margin="0,8,64,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="{Binding ElementName=ApplicationPage, Path=Background}"
            Click="BMICalculatorButton_Click">
            <Viewbox MaxWidth="200" MaxHeight="200">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE95E;" />
            </Viewbox>
        </Button>


        <ScrollViewer Grid.Row="1">

            <StackPanel
                x:Name="RootPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <!--  Water progress bar  -->
                <Grid x:Name="CircleGrid" Margin="0,20,0,50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Custom:RadialProgressBar
                        x:Name="WaterBar"
                        Grid.Row="0"
                        Width="200"
                        Height="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="DeepSkyBlue"
                        Outline="LightGray"
                        Thickness="18" />

                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock
                            x:Name="WaterAmountTextBlock"
                            HorizontalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Text="0 mL"
                            TextAlignment="Center" />
                        <TextBlock
                            x:Name="WaterTargetTextBlock"
                            HorizontalAlignment="Center"
                            FontSize="24"
                            Foreground="DimGray"
                            Text="/2000"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>

                <StackPanel x:Name="SettingsPanel" VerticalAlignment="Center">

                    <!--  Drink button  -->
                    <StackPanel Margin="10,10,10,20" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Water amount" />
                        <TextBox
                            x:Name="DrinkAmountTextBox"
                            Margin="30,0,0,0"
                            VerticalAlignment="Center"
                            BeforeTextChanging="WaterTextBox_ValidateInput"
                            InputScope="Number"
                            KeyDown="TextBox_CheckEnter"
                            MaxLength="4"
                            Text="500" />
                        <TextBlock
                            Width="20"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="mL" />
                        <Button
                            x:Name="DrinkButton"
                            Width="75"
                            Margin="25,0,0,0"
                            VerticalAlignment="Center"
                            Click="DrinkButton_Clicked"
                            Content="Drink!" />
                    </StackPanel>

                    <!--  Notifications setting  -->
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,0,0,5" Text="Notifications Setting" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton
                                x:Name="RadioButtonDisabled"
                                Checked="NotificationsLevel_Changed"
                                Content="Disabled"
                                Foreground="DimGray"
                                Tag="off" />
                            <RadioButton
                                x:Name="RadioButtonStandard"
                                Checked="NotificationsLevel_Changed"
                                Content="Standard"
                                Foreground="DarkGreen"
                                IsChecked="True"
                                Tag="standard" />
                            <RadioButton
                                x:Name="RadioButtonAlarm"
                                Checked="NotificationsLevel_Changed"
                                Content="Alarm"
                                Foreground="OrangeRed"
                                Tag="alarm" />
                        </StackPanel>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</Page>
